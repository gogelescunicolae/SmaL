<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".past.MainActivity1">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center" >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Adauga"
        android:id="@+id/ad1"
        android:layout_gravity="left"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Sterge"
        android:id="@+id/st1"
        android:layout_gravity="right"

        />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:hint="Preference"
           android:id="@+id/next"
           android:layout_gravity="right"

           />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="File"
        android:id="@+id/next_file"
        android:layout_gravity="right"

        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Room"
            android:id="@+id/next_room"
            android:layout_gravity="right"

            />
    </LinearLayout>
    <EditText
        android:id="@+id/tv_new_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_margin="10dp"
        android:hint="Name"
        android:visibility="gone"
       />

    <EditText
    android:id="@+id/tv_new_username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:hint="Username"
    android:textColor="@android:color/holo_red_dark"
    android:layout_margin="10dp"
        android:visibility="gone"
    />
    <EditText
    android:id="@+id/tv_new_age"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/holo_red_dark"
    android:layout_margin="10dp"
    android:hint="Age"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Adauga"
        android:visibility="gone"
        android:id="@+id/adauga"
        />
    <EditText
        android:id="@+id/tv_new_poz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_margin="10dp"
        android:hint="Pozitie"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Sterge"
        android:visibility="gone"
        android:id="@+id/sterge"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_test_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>